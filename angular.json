{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "verifi": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/verifi",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/assets"
            ],
            "styles": [
              "src/styles/styles.css",
              "src/styles/pagination.css",
              "src/styles/sliderToggle.css",
              "src/styles/profilePicture.css",
              "src/styles/meterDisplays.css",
              "src/styles/contentTabs.css",
              "src/styles/contentContainers.css",
              "src/styles/sectionHeaders.css",
              "src/styles/sidebar.css",
              "src/styles/popovers.css",
              "src/styles/tables.css",
              "src/styles/forms.css",
              "src/styles/arrowsTooltips.css",
              "src/styles/popupsWindows.css",
              "src/styles/alerts.css",
              "src/styles/htmlElements.css",
              "src/styles/typography.css",
              "src/styles/buttons.css",
              "src/styles/toast.css",
              "node_modules/font-awesome/css/font-awesome.css",
              "node_modules/bootstrap/dist/css/bootstrap.min.css"
            ],
            "scripts": [
              "node_modules/plotly.js/dist/plotly.min.js"
            ],
            "allowedCommonJsDependencies": [
              "lodash",
              "xlsx",
              "regression"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "5mb",
                  "maximumError": "10mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "verifi:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "verifi:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "verifi:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/assets"
            ],
            "styles": [
              "src/styles.css",
              "src/pagination.css",
              "src/slidertoggle.css",
              "src/profilepicture.css",
              "src/meterdisplays.css",
              "src/contenttabs.css",
              "src/contentcontainers.css",
              "src/sectionheaders.css",
              "src/sidebar.css",
              "src/popovers.css",
              "src/tables.css",
              "src/forms.css",
              "src/arrowstooltips.css",
              "src/popupswindows.css",
              "src/alerts.css",
              "src/htmlelements.css",
              "src/typography.css",
              "src/buttons.css"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "verifi:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "verifi:serve:production"
            }
          }
        }
      }
    }
  },
  "defaultProject": "verifi",
  "cli": {
    "analytics": false
  }
}