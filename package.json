{
  "name": "verifi",
  "description": "Application for analyzing utility usage",
  "version": "0.0.1-alpha",
  "main": "main.js",
  "author": "Advanced Manufacturing Office",
  "repository": "https://github.com/ORNL-AMO/VERIFI.git",
  "build": {
    "appId": "com.ornl.verifi",
    "copyright": "Copyright 2021 ORNL. All rights reserved.",
    "productName": "VERIFI",
    "directories": {
      "output": "../output/verifi/"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "executableName": "VERIFI",
      "maintainer": "Advanced Manufacturing Office",
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Science"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "provisioningProfile": "embedded.provisionprofile",
      "entitlements": "entitlements.mac.inherit.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist",
      "gatekeeperAssess": false
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href .",
    "build-watch": "ng build --base-href . --watch",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "11.2.6",
    "@angular/cdk": "11.2.5",
    "@angular/common": "11.2.6",
    "@angular/compiler": "11.2.6",
    "@angular/core": "11.2.6",
    "@angular/forms": "11.2.6",
    "@angular/localize": "11.2.6",
    "@angular/platform-browser": "11.2.6",
    "@angular/platform-browser-dynamic": "11.2.6",
    "@angular/router": "11.2.6",
    "@fortawesome/angular-fontawesome": "^0.6.1",
    "@ng-bootstrap/ng-bootstrap": "^6.2.0",
    "angular-plotly.js": "^2.0.0",
    "bootstrap": "^4.5.0",
    "canvas-confetti": "^1.3.3",
    "electron-log": "^4.3.2",
    "electron-updater": "^4.3.8",
    "font-awesome": "^4.7.0",
    "jquery": "^3.5.1",
    "lodash.foreach": "^4.5.0",
    "lodash.keys": "^4.2.0",
    "ngx-indexed-db": "6.1.1",
    "ngx-webstorage": "^5.0.0",
    "plotly.js": "^1.54.6",
    "plotly.js-dist": "^1.54.6",
    "rxjs": "~6.5.5",
    "tslib": "^1.10.0",
    "websocket-extensions": "^0.1.4",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1102.5",
    "@angular/cli": "11.2.5",
    "@angular/compiler-cli": "11.2.6",
    "@angular/language-service": "11.2.6",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "14.14.35",
    "codelyzer": "^5.1.2",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lodash": "^4.17.20",
    "protractor": "~5.4.0",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typescript": "~4.1.0",
    "xlsx": "^0.16.9"
  }
}
